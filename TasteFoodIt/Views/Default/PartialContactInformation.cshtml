@model List<TasteFoodIt.Entities.ContactInformation>
<section class="ftco-section contact-section bg-light">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row d-flex contact-info">
                <div class="col-md-12">
                    <h2 class="h4 font-weight-bold">İletişim Bilgileri</h2>
                </div>
                <div class="w-100"></div>
                <div class="col-md-3 d-flex">
                    <div class="dbox">
                        <p><span>Adres:</span>@item.Address </p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="dbox">
                        <p><span>Telefon:</span>@item.Phone</p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="dbox">
                        <p><span>E-mail:</span> <a href="mailto:info@yoursite.com">@item.Email</a></p>
                    </div>
                </div>
                <div class="col-md-3 d-flex">
                    <div class="dbox">
                        <p><span>Website</span> <a href="#">@item.WebsiteUrl</a></p>
                    </div>
                </div>
            </div>
        }

    </div>
</section>
