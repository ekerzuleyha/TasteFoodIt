@model TasteFoodIt.Entities.ContactInformation
@{
    ViewBag.Title = "UpdateContactInformation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Adres Bilgileri Güncelleme Sayfası</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="./">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Adres Bilgileri</li>
            <li class="breadcrumb-item active" aria-current="page">Adres Bilgileri İşlemleri</li>
        </ol>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <!-- Form Basic -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Güncelleme Paneli</h6>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            @Html.HiddenFor(x => x.ContactInformationId)
                            <label>Adres</label>
                            @Html.TextBoxFor(x => x.Address, new { @class = "form-control" })
                            <br />
                            <label>Telefon</label>
                            @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                            <br />
                            <label>Email</label>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                            <br />
                            <label>Website</label>
                            @Html.TextBoxFor(x => x.WebsiteUrl, new { @class = "form-control" })
                            <br />



                        </div>

                        <button type="submit" class="btn btn-primary">Adres Bilgileri Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

