@model List<TasteFoodIt.Entities.Product>
@{
    ViewBag.Title = "CategoryProducts";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kategoriye Ait Ürünler Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item">Kategoriler</li>
            <li class="breadcrumb-item active" aria-current="page">Kategori İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                   
                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                               
                                
                                <th>Ürünler</th>
                                <th>Ürün Görseli</th>

                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                                           
                                    <td>@item.ProductName</td>
                                    <td><img src="@item.ImageUrl" width="75px" height="75px" border="0" alt="ürün resmi"></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    
                    
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->
</div>



