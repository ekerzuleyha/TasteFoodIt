@model List<TasteFoodIt.Entities.Contact>
@{
    ViewBag.Title = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mesaj Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="/Product/ProductList/">Mesajlar</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mesaj İşlemleri</li>
        </ol>
    </div>

    <div class="row">
        <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">

                </div>
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th>Id</th>
                                <th>Gönderen</th>
                                <th>Email</th>
                                <th>Konu</th>                               
                                <th>Gönderme Tarihi</th>
                                <th>Durum</th>
                                <th>Sil</th>
                                <th>Mesaj İçeriği</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                string okunduBilgisi = "";
                                string renk = "";

                                if (item.IsRead == true)
                                {
                                    okunduBilgisi = "Okundu";
                                    //renk = "alert-success";
                                    renk = "badge bg-success";
                                }
                                else
                                {
                                    okunduBilgisi = "Okunmadı";
                                    renk = "badge bg-danger";
                                }
                                <tr>
                                    <td>@count</td>
                                    <td>@item.NameSurname</td>
                                    <td>@item.Email</td>
                                    <td>@item.Subject</td>
                                    <td>@(((DateTime)item.SendDate).ToString("dd.MM.yyyy"))</td>
                                    <td><span class="@renk" style=" color:azure;font-size:larger">@okunduBilgisi</span></td>
                                    <td><a href="/Contact/DeleteMessage/@item.ContactId" class="btn btn-danger">Sil</a></td>
                                    <td><a href="/Contact/ReadMessage/@item.ContactId" class="btn btn-success">Mesajı Aç</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br />

                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
    <!--Row-->
</div>

