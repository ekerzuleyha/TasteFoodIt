@model TasteFoodIt.Entities.Contact
@{
    ViewBag.Title = "ReadMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="container-fluid" id="container-wrapper">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mesaj Listesi</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Default/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item"><a href="/Product/ProductList/">Mesajlar</a></li>
            <li class="breadcrumb-item active" aria-current="page">Mesaj İşlemleri</li>
        </ol>
    </div>

    <div class="form-group">

        <label>Mesaj Id</label>
        @Html.TextBoxFor(x => x.ContactId, new { @class = "form-control", @readonly = "true" })
        <br />

        <label>Gönderen</label>
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
        <br />

        <label>Konu</label>
        @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
        <br />

        <label>Mesaj</label>
        @Html.TextBoxFor(x => x.Message, new { @class = "form-control" })
        <br />

        <label>Email</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        <br />

        <label>Gönderme Tarihi</label>
        @*@Html.TextBoxFor(x => x.SendDate, new { @class = "form-control" })*@
        <input type="datetime" class="form-control" name="SendDate" value="@(((DateTime)Model.SendDate).ToString("dd.MM.yyyy"))" />
        <br />


    </div>

    <a href="/Contact/ContactList" class="btn btn-info">Mesajlara Dön</a>
</div>



